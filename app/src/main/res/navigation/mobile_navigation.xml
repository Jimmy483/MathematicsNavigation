    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.mathematicssidebar.ui.home.HomeFragment"
        android:label="Area Of Circle"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.mathematicssidebar.ui.gallery.GalleryFragment"
        android:label="Palindrome"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.mathematicssidebar.ui.slideshow.SlideshowFragment"
        android:label="Swap Numbers"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_tools"
        android:name="com.example.mathematicssidebar.ui.tools.ToolsFragment"
